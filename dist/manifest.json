{
  "manifest_version": 2,

  "name": "Highlight dates",
  "description": "This extension allows the user to highlight dates on pages",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "background",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Highlight dates",
    "default_icon": "icon.png"
  }
}